<div class="mt-3 mb-2 d-flex flex-row justify-content-between align-items-center">
  <h1>Mappers Leaderboard</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Device UUID</th>
      <th scope="col">Number of Unique Hex Mapped</th>
    </tr>
  </thead>
  <tbody>
    <%= for leader <- @leaders do %>
      <tr>
        <td><%= leader.device_id %></td>
        <td><%= leader.total_unique_hex %></td>
      </tr>
    <% end %>
  </tbody>
</table>
